{
  "name": "rikaikun",
  "version": "0.10.1",
  "description": "Chrome extension that provides Japanese to English translations when hovering over words.",
  "private": true,
  "scripts": {
    "eslint": "eslint **/*.js",
    "fix": "npm run prettier:format --silent ; npm run eslint --silent -- --fix",
    "lint": "npm run eslint --silent; npm run prettier:check --silent",
    "prettier:base": "prettier --config .prettierrc **/*.{css,html,js,json}",
    "prettier:check": "npm run prettier:base --silent -- --check",
    "prettier:format": "npm run prettier:base --silent -- --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-db": "node utils/update-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melink14/rikaikun.git"
  },
  "keywords": [
    "japanese",
    "chrome",
    "extension",
    "javascript"
  ],
  "author": "melink14",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/melink14/rikaikun/issues"
  },
  "homepage": "https://github.com/melink14/rikaikun#readme",
  "devDependencies": {
    "byline": "^5.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint": "^7.7.0",
    "iconv-lite": "^0.6.2",
    "prettier": "^2.0.5"
  }
}
